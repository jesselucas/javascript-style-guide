{
    // Globals exposed by modern browsers 
    "browser": true,

    // Globals exposed by the jQuery
    "jquery": true,

    // Force all variable names to use either camelCase style or UPPER_CASE with underscores
    "camelcase": true,

    // Requires you to always put curly braces around blocks in loops and conditionals
    "curly": true,

    // Prohibits the use of == and != in favor of === and !==.
    "eqeqeq": true,

    // Suppresses warnings about == null comparisons
    "eqnull": true,

    // Prohibits the use of immediate function invocations without wrapping them in parentheses
    "immed": true,

    // Prohibits the use of a variable before it was defined
    "latedef": true,

    // Requires you to capitalize names of constructor functions
    "newcap": true,

    // Prohibits the use of arguments.caller and arguments.callee
    "noarg": true,

    // Enforce use of double quotes
    "quotmark": "double",

    // Prohibits the use of explicitly undeclared variables
    "undef": true,

    // Warns when you define and never use your variables
    "unused": true
}